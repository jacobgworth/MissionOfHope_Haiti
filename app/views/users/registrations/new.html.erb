<style>
.forms-control {
    display: block;
    width: 100%;
    padding: 10px 12px;
    font-size: 14px;
    margin-top: 7px;
    line-height: 1.42857143;
    color: #555555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 0;
    height: 42px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
    -o-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
    transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
 }
 </style>
<div class="row" style="padding:20px 0 0 0;">
  <div class="col-md-12">
    <h1> Create A MY MOH Account</h1>
  </div>
</div>
<div class="row" style="padding:0 0 10px 0;">
<div class="col-md-12">
 <p>
  We are excited to announce that we have recently transitioned to a new online donor support system that will allow you to manage your giving in new and easy way! If you created an account online with us before 6/10/13, your login information is no longer valid and you will need to create a new account using the form below. Once you have created a new online account, you will be able to access your giving history, give a gift, manage account information and more. If you have any questions about this, please contact our stateside office at 512-256-0835 or email <a href="info@mohhaiti.org">info@mohhaiti.org</a>. 
</p>
</div>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
        <%= f.label :first_name %>*<br />
        <%= f.text_field :first_name, :required => true, autofocus: true, :class => "mymoh-form-field" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
        <%= f.label :last_name %>*<br />
        <%= f.text_field :last_name, :required => true, :class => "mymoh-form-field" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
        <%= f.label :email %>*<br />
        <%= f.email_field :email, autofocus: true, :class => "mymoh-form-field" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
        <%= f.label :password %>*
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :required => true, :class => "mymoh-form-field"%>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
      <%= f.label :password_confirmation %>*<br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :required => true, :class => "mymoh-form-field" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
      <label>Address*</label><br />
      <%= f.text_field :street1, :required => true, :class => "mymoh-form-field" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
      <%= f.label :city %>*<br />
      <%= f.text_field :city, :required => true, :class => "mymoh-form-field" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
      <%= f.label :state %>*<br />
      <%= f.select(:state, [
      ['Alabama', 'AL'],
      ['Alaska', 'AK'],
      ['Arizona', 'AZ'],
      ['Arkansas', 'AR'],
      ['California', 'CA'],
      ['Colorado', 'CO'],
      ['Connecticut', 'CT'],
      ['Delaware', 'DE'],
      ['District of Columbia', 'DC'],
      ['Florida', 'FL'],
      ['Georgia', 'GA'],
      ['Hawaii', 'HI'],
      ['Idaho', 'ID'],
      ['Illinois', 'IL'],
      ['Indiana', 'IN'],
      ['Iowa', 'IA'],
      ['Kansas', 'KS'],
      ['Kentucky', 'KY'],
      ['Louisiana', 'LA'],
      ['Maine', 'ME'],
      ['Maryland', 'MD'],
      ['Massachusetts', 'MA'],
      ['Michigan', 'MI'],
      ['Minnesota', 'MN'],
      ['Mississippi', 'MS'],
      ['Missouri', 'MO'],
      ['Montana', 'MT'],
      ['Nebraska', 'NE'],
      ['Nevada', 'NV'],
      ['New Hampshire', 'NH'],
      ['New Jersey', 'NJ'],
      ['New Mexico', 'NM'],
      ['New York', 'NY'],
      ['North Carolina', 'NC'],
      ['North Dakota', 'ND'],
      ['Ohio', 'OH'],
      ['Oklahoma', 'OK'],
      ['Oregon', 'OR'],
      ['Pennsylvania', 'PA'],
      ['Puerto Rico', 'PR'],
      ['Rhode Island', 'RI'],
      ['South Carolina', 'SC'],
      ['South Dakota', 'SD'],
      ['Tennessee', 'TN'],
      ['Texas', 'TX'],
      ['Utah', 'UT'],
      ['Vermont', 'VT'],
      ['Virginia', 'VA'],
      ['Washington', 'WA'],
      ['West Virginia', 'WV'],
      ['Wisconsin', 'WI'],
      ['Wyoming', 'WY']], :class => "mymoh-form-field") %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
      <%= f.label :zip %>*<br />
      <%= f.text_field :zip, :required => true, :class => "mymoh-form-field" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
    <%= f.submit "Sign Up", :class => "buttonSquareOrange", :style => "border:none;" %>
    </div>
  </div>
  <div class="row" style="padding-top: 20px;">
    <div class="col-md-6 col-xs-12">
    <h3 style="padding-bottom:10px;">Already have a MYMOH account?</h3><br />
    </div>
  </div>
  <div class="row" style="padding-bottom: 20px;">
    <div class="col-md-2">
    <%= render "users/shared/links" %>
    </div>
  </div>
<% end %>